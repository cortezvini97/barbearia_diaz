        android:id="@+id/text_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente: Cortez" />

    <TextView
        android:id="@+id/text_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hora: " />

    <TextView
        android:id="@+id/text_preco"
        android:layout_width="match_parent"
